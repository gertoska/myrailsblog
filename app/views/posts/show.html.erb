<div class="post">
  <h1><%= @post.title %></h1>
  <p><%= @post.created_at.strftime("%b %d. %Y") %> | Created by: <%= @post.admin_user.name %></p>
  <p><%= @post.body %></p>
  <p>Category: <%= link_to @post.category.name, category_path %></p>
  <%= link_to 'Back', posts_path %>

  <hr/>
  <h3>Add a comment</h3>
  <%= form_for @comment do |f| %>
      <%= f.hidden_field :post_id %>
      <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :email %><br/>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :body %><br/>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit "Post comment" %>
      </p>
  <% end %>

  <br />

  <%= render :partial => 'partials/comment', :collection => @post.comments %>
</div>